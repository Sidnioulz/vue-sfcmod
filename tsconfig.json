{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "types": ["vitest/globals"],
    "typeRoots": ["node_modules", "src/shims"],
    "rootDir": ".",
    "paths": {
      "~/*": ["./src/*.ts"]
    }
  },
  "include": ["bin", "src", "index.ts"],
  "exclude": ["dist", "examples"]
}
