{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "types": ["jest", "jscodeshift", "node"],
    "rootDir": ".",
    "paths": {
      "~*": ["src/*"]
    }
  },
  "exclude": ["dist", "playground", "**/__tests__"]
}
