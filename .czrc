{
  "path": "./.cz-engine.config.cjs",
  "maxHeaderWidth": 80,
  "maxLineWidth": 100,
  "defaultType": "feat",
  "types": {
    "feat": {
      "description": "New components or updates to components",
      "title": "Features ✨"
    },
    "fix": {
      "description": "Bug fixes",
      "title": "Bug Fixes 🐛"
    },
    "docs": {
      "description": "Markdown and JSDoc changes",
      "title": "Documentation 📚"
    },
    "refactor": {
      "description": "Code changes that neither fix a bug nor add a feature",
      "title": "Code Refactoring 📦"
    },
    "style": {
      "description": "Formatting-related code changes (white-space, formatting, semi-colons, etc)",
      "title": "Style Refactoring 💎"
    },
    "test": {
      "description": "Adding missing tests or correcting existing tests",
      "title": "Tests 🚨"
    },
    "revert": {
      "description": "Commits that revert a previous commit",
      "title": "Reverts 🗑"
    },
    "chore": {
      "description": "Changes to tooling and configuration files",
      "title": "Chores ♻️"
    }
  }
}
